{
    "$schema": "https://aka.ms/terminal-profiles-schema",
    "actions": 
    [
        {
            "command": 
            {
                "action": "copy",
                "singleLine": false
            },
            "keys": "ctrl+c"
        },
        {
            "command": "paste",
            "keys": "ctrl+v"
        },
        {
            "command": "find",
            "keys": "ctrl+shift+f"
        },
        {
            "command": 
            {
                "action": "splitPane",
                "split": "auto",
                "splitMode": "duplicate"
            },
            "keys": "alt+shift+d"
        }
    ],
    "copyFormatting": "none",
    "copyOnSelect": false,
    "defaultProfile": "{61c54bbd-c2c6-5271-96e7-009a87ff44bf}",
    "experimental.rendering.software": true,
    "initialCols": 100,
    "initialRows": 25,
    "profiles": 
    {
        "defaults": {},
        "list": 
        [
            {
                "name": "PowerShell",
                "guid": "{61c54bbd-c2c6-5271-96e7-009a87ff44bf}",
                "commandline": "powershell.exe",

                "hidden": false,
                "colorScheme": "PowerShell",

                    /*trasparence*/
                "useAcrylic": true,
                "acrylicOpacity": 0.7,

                    /*font*/
                    /* fonts examples: Hurmit Nerd Font
                                       SpaceMono Nerd Font
                                       mononoki Nerd Font*/
                "fontFace": "Hurmit Nerd Font",
                 "fontSize": 12,

                  /* margin */
                "padding": "8, 8, 8, 8"
            },

            {
                "name": "Cmd",
                "commandline": "cmd.exe",
                "guid": "{0caa0dad-35be-5f56-a8ff-afceeeaa6101}",

                "hidden": false,
                "colorScheme": "Cmd",

                    /*trasparence*/
                "useAcrylic": true,
                "acrylicOpacity": 0.8,

                    /*fonts*/
                "fontFace": "SpaceMono Nerd Font",
                 "fontSize": 12,

                  /* margin */
                "padding": "8, 8, 8, 8"
            },
            {
                "guid": "{b453ae62-4e3d-5e58-b989-0a998ec441b8}",
                "hidden": false,
                "name": "Azure Cloud Shell",
                "source": "Windows.Terminal.Azure",
                "colorScheme": "Vintage",
                "fontFace": "mononoki Nerd Font",
                 "fontSize": 12
            },
            {
                "guid": "{2ece5bfe-50ed-5f3a-ab87-5cd4baafed2b}",
                "name": "Git Bash",
                "source": "Git",
                "colorScheme": "Vintage",
                "fontFace": "mononoki Nerd Font",
                 "fontSize": 12
            }
        ]
    },
